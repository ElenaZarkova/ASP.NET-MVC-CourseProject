@model SearchResultsViewModel

<div>Results: @Model.BooksCount books</div>
@foreach (var book in Model.Books)
{
    <div class="col-md-4 text-center">
        @Html.DisplayFor(_ => book)
    </div>
}

<div >
    <ul class="pagination">
        @for (int i = 1; i <= Model.Pages; i++)
            {
            <li>
                @Ajax.ActionLink(i.ToString(), "SearchBooks",
            new
            {
                SearchWord = Model.SubmitModel.SearchWord,
                SortBy = Model.SubmitModel.SortBy,
                ChosenGenresIds = Model.SubmitModel.ChosenGenresIds,
                Page = i
            },
            new AjaxOptions()
            {
                UpdateTargetId = "search-results",
                InsertionMode = InsertionMode.Replace
            })
            </li>
        }
    </ul>
</div>
